!Emacs.Background: DarkSlateGray
!Emacs.Foreground: Wheat
!Emacs*pointerColor: Orchid
Emacs*cursorColor: Orchid
Emacs*bitmapIcon: on
!Emacs*font: 8x13
!Emacs.Font: -misc-*-medium-r-normal--15-*-*-*-*-*-microsoft-cp1251
!Emacs.Font: -cronyx-fixed-medium-r-normal--15-*-*-*-*-*-koi8-u
!Emacs.geometry: 80x25
Emacs.default.attributeFamily: fixed

! Other additions:

!Emacs*menu*attributeFamily: helv
!Emacs.menu.attributeBackground: peach puff

! End of /etc/X11/app-defaults/Emacs
