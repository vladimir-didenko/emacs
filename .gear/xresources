! Moved here from Emacs' site-start configuration:

!Emacs*cursorColor: red
!Emacs*bitmapIcon: on

Emacs.Foreground: black
Emacs.Background: honeydew

!Emacs.mode-line.attributeForeground: red
!Emacs.mode-line.attributeBackground: lemon chiffon

! To distinguish this face by color if there is no bold-italic font.
Emacs.bold-italic.attributeForeground: blue

! to use russian fonts in main menu
Emacs.paned.menubar.font: fixed

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! Use similar lines in your ~/.Xdefaults
! to override the colour everywhere:

!Emacs*background: green
!Emacs*foreground: red

! end of colour override
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

